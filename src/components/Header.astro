---
import { Image } from 'astro:assets';
import { getTranslations } from '../content/translations';
import logo from '../../public/bwlogo.png';

interface Props {
	lang: 'en' | 'ko';
	currentPage?: 'home' | 'services' | 'resources' | 'about' | 'contact';
	serviceSlug?: string;
	lightHeader?: boolean;
}

const { lang, currentPage = 'home', serviceSlug, lightHeader = false } = Astro.props;
const t = getTranslations(lang);

const homeUrl = lang === 'en' ? '/' : '/ko';
const resourcesUrl = lang === 'en' ? '/resources' : '/ko/resources';
const aboutUrl = lang === 'en' ? '/about' : '/ko/about';
const contactUrl = lang === 'en' ? '/contact' : '/ko/contact';
const serviceUrlPrefix = lang === 'en' ? '/services' : '/ko/services';

const otherLangUrl = lang === 'en'
	? (serviceSlug ? `/ko/services/${serviceSlug}` : currentPage === 'resources' ? '/ko/resources' : currentPage === 'about' ? '/ko/about' : currentPage === 'contact' ? '/ko/contact' : '/ko')
	: (serviceSlug ? `/services/${serviceSlug}` : currentPage === 'resources' ? '/resources' : currentPage === 'about' ? '/about' : currentPage === 'contact' ? '/contact' : '/');

// Color classes based on light/dark header
const headerBg = lightHeader ? 'bg-[#e3f0f5]' : 'bg-[#172a3a]';
const textColor = lightHeader ? 'text-gray-700' : 'text-gray-300';
const textHover = lightHeader ? 'hover:text-[#09bc8a]' : 'hover:text-[#09bc8a]';
const textInactive = lightHeader ? 'text-gray-500' : 'text-gray-400';
const borderColor = lightHeader ? 'border-gray-300' : 'border-gray-600';
const logoFilter = lightHeader ? '' : 'invert';
---

<header id="header" class={`${headerBg} fixed top-0 left-0 right-0 z-50`}>
	<nav class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-3">
		<!-- Mobile Header -->
		<div class="flex md:hidden items-center justify-between">
			<a href={homeUrl} class="flex items-center"><Image src={logo} alt="OmixAI" format="png" class={`h-9 w-auto ${logoFilter}`} /></a>
			<button id="mobile-menu-button" class={`${textColor} ${textHover}`} aria-label="Toggle menu">
				<svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
					<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
				</svg>
			</button>
		</div>

		<!-- Desktop Header -->
		<div class="hidden md:grid grid-cols-3 items-center">
			<a href={homeUrl} class="flex items-center"><Image src={logo} alt="OmixAI" format="png" class={`h-10 w-auto ${logoFilter}`} /></a>

			<div class="flex items-center justify-center gap-6">
				<div class="relative group">
					<button class={`flex items-center gap-1 cursor-pointer ${currentPage === 'services' ? 'text-[#09bc8a] font-semibold' : `${textColor} ${textHover}`}`}>
						{t.nav.services}
						<svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
						</svg>
					</button>
					<div class="absolute left-0 top-full pt-2 w-48 opacity-0 invisible group-hover:opacity-100 group-hover:visible transition-all duration-300 ease-out z-50">
						<div class="bg-[#fafaf8] rounded-lg shadow-lg">
							<div class="py-2">
								{t.services.items.map((service) => (
									<a href={`${serviceUrlPrefix}/${service.slug}`} class="block px-4 py-2 text-gray-800 hover:bg-[#f9f9f6] hover:text-[#09bc8a]">
										{service.title}
									</a>
								))}
							</div>
						</div>
					</div>
				</div>
				<div class="relative group">
					<button class={`flex items-center gap-1 cursor-pointer ${currentPage === 'resources' ? 'text-[#09bc8a] font-semibold' : `${textColor} ${textHover}`}`}>
						{t.nav.resources}
						<svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
						</svg>
					</button>
					<div class="absolute left-0 top-full pt-2 w-48 opacity-0 invisible group-hover:opacity-100 group-hover:visible transition-all duration-300 ease-out z-50">
						<div class="bg-[#fafaf8] rounded-lg shadow-lg">
							<div class="py-2">
								<a href={`${resourcesUrl}#faq`} class="block px-4 py-2 text-gray-800 hover:bg-[#f9f9f6] hover:text-[#09bc8a]">
									{lang === 'en' ? 'FAQ' : 'FAQ'}
								</a>
								<a href={`${resourcesUrl}#technical`} class="block px-4 py-2 text-gray-800 hover:bg-[#f9f9f6] hover:text-[#09bc8a]">
									{lang === 'en' ? 'Technical Docs' : '기술 문서'}
								</a>
							</div>
						</div>
					</div>
				</div>
				<a href={aboutUrl} class={currentPage === 'about' ? 'text-[#09bc8a] font-semibold' : `${textColor} ${textHover}`}>{t.nav.about}</a>
				<a href={contactUrl} class={currentPage === 'contact' ? 'text-[#09bc8a] font-semibold' : `${textColor} ${textHover}`}>{t.nav.contact}</a>
			</div>

			<div class="flex items-center justify-end gap-6">
				<div class="flex items-center gap-1 text-sm">
					{lang === 'en' ? (
						<>
							<a href={otherLangUrl} class={`${textInactive} ${textHover}`}>한</a>
							<span class={lightHeader ? 'text-gray-400' : 'text-gray-600'}>/</span>
							<span class="text-[#09bc8a] font-semibold">EN</span>
						</>
					) : (
						<>
							<span class="text-[#09bc8a] font-semibold">한</span>
							<span class={lightHeader ? 'text-gray-400' : 'text-gray-600'}>/</span>
							<a href={otherLangUrl} class={`${textInactive} ${textHover}`}>EN</a>
						</>
					)}
				</div>
				<a href="http://210.92.36.12:11331" target="_blank" rel="noopener noreferrer" class="bg-[#508991] text-white px-6 py-2 rounded-full hover:bg-[#004346] flex items-center gap-2">
					Demo
					<svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
						<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"></path>
					</svg>
				</a>
			</div>
		</div>

		<!-- Mobile Menu -->
		<div id="mobile-menu" class="hidden md:hidden mt-4">
			<div class="flex flex-col space-y-4">
				<!-- Services Dropdown -->
				<div>
					<button id="mobile-services-button" class={`w-full text-left flex items-center justify-between ${currentPage === 'services' ? 'text-[#09bc8a] font-semibold' : textColor}`}>
						<span>{t.nav.services}</span>
						<svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
						</svg>
					</button>
					<div id="mobile-services-dropdown" class="hidden mt-2 ml-4 space-y-2">
						{t.services.items.map((service) => (
							<a href={`${serviceUrlPrefix}/${service.slug}`} class={`block ${textColor} ${textHover}`}>
								{service.title}
							</a>
						))}
					</div>
				</div>

				<!-- Resources Dropdown -->
				<div>
					<button id="mobile-resources-button" class={`w-full text-left flex items-center justify-between ${currentPage === 'resources' ? 'text-[#09bc8a] font-semibold' : textColor}`}>
						<span>{t.nav.resources}</span>
						<svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
						</svg>
					</button>
					<div id="mobile-resources-dropdown" class="hidden mt-2 ml-4 space-y-2">
						<a href={`${resourcesUrl}#faq`} class={`block ${textColor} ${textHover}`}>
							{lang === 'en' ? 'FAQ' : 'FAQ'}
						</a>
						<a href={`${resourcesUrl}#technical`} class={`block ${textColor} ${textHover}`}>
							{lang === 'en' ? 'Technical Docs' : '기술 문서'}
						</a>
					</div>
				</div>

				<a href={aboutUrl} class={currentPage === 'about' ? 'text-[#09bc8a] font-semibold' : `${textColor} ${textHover}`}>{t.nav.about}</a>
				<a href={contactUrl} class={currentPage === 'contact' ? 'text-[#09bc8a] font-semibold' : `${textColor} ${textHover}`}>{t.nav.contact}</a>

				<div class={`border-t ${borderColor} pt-4`}>
					<div class="flex items-center gap-2 mb-4">
						{lang === 'en' ? (
							<>
								<a href={otherLangUrl} class={`${textInactive} ${textHover}`}>한</a>
								<span class={lightHeader ? 'text-gray-400' : 'text-gray-600'}>/</span>
								<span class="text-[#09bc8a] font-semibold">EN</span>
							</>
						) : (
							<>
								<span class="text-[#09bc8a] font-semibold">한</span>
								<span class={lightHeader ? 'text-gray-400' : 'text-gray-600'}>/</span>
								<a href={otherLangUrl} class={`${textInactive} ${textHover}`}>EN</a>
							</>
						)}
					</div>
					<a href="http://210.92.36.12:11331" target="_blank" rel="noopener noreferrer" class="bg-[#508991] text-white px-6 py-2 rounded-full hover:bg-[#004346] flex items-center justify-center gap-2">
						Demo
						<svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"></path>
						</svg>
					</a>
				</div>
			</div>
		</div>
	</nav>
</header>

<script>
	// Mobile menu toggle
	const mobileMenuButton = document.getElementById('mobile-menu-button');
	const mobileMenu = document.getElementById('mobile-menu');
	const mobileServicesButton = document.getElementById('mobile-services-button');
	const mobileServicesDropdown = document.getElementById('mobile-services-dropdown');
	const mobileResourcesButton = document.getElementById('mobile-resources-button');
	const mobileResourcesDropdown = document.getElementById('mobile-resources-dropdown');

	mobileMenuButton?.addEventListener('click', () => {
		mobileMenu?.classList.toggle('hidden');
	});

	mobileServicesButton?.addEventListener('click', () => {
		mobileServicesDropdown?.classList.toggle('hidden');
	});

	mobileResourcesButton?.addEventListener('click', () => {
		mobileResourcesDropdown?.classList.toggle('hidden');
	});
</script>
