---
import { getTranslations } from '../i18n/utils';

interface Props {
	lang: 'en' | 'ko';
	currentPage?: 'home' | 'services' | 'resources' | 'about';
	serviceSlug?: string;
	lightHeader?: boolean;
}

const { lang, currentPage = 'home', serviceSlug, lightHeader = false } = Astro.props;
const t = getTranslations(lang);

const homeUrl = lang === 'en' ? '/en' : '/';
const resourcesUrl = lang === 'en' ? '/en/resources' : '/resources';
const aboutUrl = lang === 'en' ? '/en/about' : '/about';
const serviceUrlPrefix = lang === 'en' ? '/en/services' : '/services';

const otherLangUrl = lang === 'en'
	? (serviceSlug ? `/services/${serviceSlug}` : currentPage === 'resources' ? '/resources' : currentPage === 'about' ? '/about' : '/')
	: (serviceSlug ? `/en/services/${serviceSlug}` : currentPage === 'resources' ? '/en/resources' : currentPage === 'about' ? '/en/about' : '/en');

// Color classes based on light/dark header
const headerBg = lightHeader ? 'bg-[#74b3ce]/20' : 'bg-[#172a3a]';
const textColor = lightHeader ? 'text-gray-700' : 'text-gray-300';
const textHover = lightHeader ? 'hover:text-[#09bc8a]' : 'hover:text-[#09bc8a]';
const textInactive = lightHeader ? 'text-gray-500' : 'text-gray-400';
const borderColor = lightHeader ? 'border-gray-300' : 'border-gray-600';
const logoFilter = lightHeader ? '' : 'invert';
---

<header id="header" class={headerBg}>
	<nav class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-3">
		<!-- Mobile Header -->
		<div class="flex md:hidden items-center justify-between">
			<a href={homeUrl} class="flex items-center"><img src="/bwlogo.png" alt="OmixAI" class={`h-9 ${logoFilter}`} /></a>
			<button id="mobile-menu-button" class={`${textColor} ${textHover}`} aria-label="Toggle menu">
				<svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
					<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
				</svg>
			</button>
		</div>

		<!-- Desktop Header -->
		<div class="hidden md:grid grid-cols-3 items-center">
			<a href={homeUrl} class="flex items-center"><img src="/bwlogo.png" alt="OmixAI" class={`h-10 ${logoFilter}`} /></a>

			<div class="flex items-center justify-center gap-6">
				<div class="relative group">
					<button class={`flex items-center gap-1 cursor-pointer ${currentPage === 'services' ? 'text-[#09bc8a] font-semibold' : `${textColor} ${textHover}`}`}>
						{t.nav.services}
						<svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
						</svg>
					</button>
					<div class="absolute left-0 mt-2 w-48 bg-[#fafaf8] rounded-lg shadow-lg opacity-0 invisible group-hover:opacity-100 group-hover:visible transition-all duration-200 z-50">
						<div class="py-2">
							<a href={`${serviceUrlPrefix}/proteomics`} class="block px-4 py-2 text-gray-800 hover:bg-[#f9f9f6] hover:text-[#09bc8a]">
								{lang === 'en' ? 'Proteomics' : '프로테오믹스'}
							</a>
							<a href={`${serviceUrlPrefix}/multi-omics`} class="block px-4 py-2 text-gray-800 hover:bg-[#f9f9f6] hover:text-[#09bc8a]">
								{lang === 'en' ? 'Multi-Omics' : '멀티오믹스'}
							</a>
							<a href={`${serviceUrlPrefix}/biomarkers`} class="block px-4 py-2 text-gray-800 hover:bg-[#f9f9f6] hover:text-[#09bc8a]">
								{lang === 'en' ? 'Biomarkers' : '바이오마커'}
							</a>
							<a href={`${serviceUrlPrefix}/ai-bi`} class="block px-4 py-2 text-gray-800 hover:bg-[#f9f9f6] hover:text-[#09bc8a]">
								AI x BI
							</a>
						</div>
					</div>
				</div>
				<a href={resourcesUrl} class={currentPage === 'resources' ? 'text-[#09bc8a] font-semibold' : `${textColor} ${textHover}`}>{t.nav.resources}</a>
				<a href={aboutUrl} class={currentPage === 'about' ? 'text-[#09bc8a] font-semibold' : `${textColor} ${textHover}`}>{t.nav.about}</a>
			</div>

			<div class="flex items-center justify-end gap-6">
				<div class="flex items-center gap-1 text-sm">
					{lang === 'en' ? (
						<>
							<a href={otherLangUrl} class={`${textInactive} ${textHover}`}>한</a>
							<span class={lightHeader ? 'text-gray-400' : 'text-gray-600'}>/</span>
							<span class="text-[#09bc8a] font-semibold">EN</span>
						</>
					) : (
						<>
							<span class="text-[#09bc8a] font-semibold">한</span>
							<span class={lightHeader ? 'text-gray-400' : 'text-gray-600'}>/</span>
							<a href={otherLangUrl} class={`${textInactive} ${textHover}`}>EN</a>
						</>
					)}
				</div>
				<div class="flex items-center gap-3">
					<a href="http://210.92.36.12:11331" target="_blank" rel="noopener noreferrer" class="bg-[#508991] text-white px-6 py-2 rounded-full hover:bg-[#004346]">
						Demo
					</a>
					<a href="mailto:omixai@omixai.com" class="bg-[#09bc8a] text-white px-6 py-2 rounded-full hover:bg-[#004346]">
						{t.nav.cta}
					</a>
				</div>
			</div>
		</div>

		<!-- Mobile Menu -->
		<div id="mobile-menu" class="hidden md:hidden mt-4">
			<div class="flex flex-col space-y-4">
				<!-- Services Dropdown -->
				<div>
					<button id="mobile-services-button" class={`w-full text-left flex items-center justify-between ${currentPage === 'services' ? 'text-[#09bc8a] font-semibold' : textColor}`}>
						<span>{t.nav.services}</span>
						<svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
						</svg>
					</button>
					<div id="mobile-services-dropdown" class="hidden mt-2 ml-4 space-y-2">
						<a href={`${serviceUrlPrefix}/proteomics`} class={`block ${textColor} ${textHover}`}>
							{lang === 'en' ? 'Proteomics' : '프로테오믹스'}
						</a>
						<a href={`${serviceUrlPrefix}/multi-omics`} class={`block ${textColor} ${textHover}`}>
							{lang === 'en' ? 'Multi-Omics' : '멀티오믹스'}
						</a>
						<a href={`${serviceUrlPrefix}/biomarkers`} class={`block ${textColor} ${textHover}`}>
							{lang === 'en' ? 'Biomarkers' : '바이오마커'}
						</a>
						<a href={`${serviceUrlPrefix}/ai-bi`} class={`block ${textColor} ${textHover}`}>
							AI x BI
						</a>
					</div>
				</div>

				<a href={resourcesUrl} class={currentPage === 'resources' ? 'text-[#09bc8a] font-semibold' : `${textColor} ${textHover}`}>{t.nav.resources}</a>
				<a href={aboutUrl} class={currentPage === 'about' ? 'text-[#09bc8a] font-semibold' : `${textColor} ${textHover}`}>{t.nav.about}</a>

				<div class={`border-t ${borderColor} pt-4`}>
					<div class="flex items-center gap-2 mb-4">
						{lang === 'en' ? (
							<>
								<a href={otherLangUrl} class={`${textInactive} ${textHover}`}>한</a>
								<span class={lightHeader ? 'text-gray-400' : 'text-gray-600'}>/</span>
								<span class="text-[#09bc8a] font-semibold">EN</span>
							</>
						) : (
							<>
								<span class="text-[#09bc8a] font-semibold">한</span>
								<span class={lightHeader ? 'text-gray-400' : 'text-gray-600'}>/</span>
								<a href={otherLangUrl} class={`${textInactive} ${textHover}`}>EN</a>
							</>
						)}
					</div>
					<div class="flex flex-col gap-3">
						<a href="http://210.92.36.12:11331" target="_blank" rel="noopener noreferrer" class="bg-[#508991] text-white px-6 py-2 rounded-full hover:bg-[#004346] text-center">
							Demo
						</a>
						<a href="mailto:omixai@omixai.com" class="bg-[#09bc8a] text-white px-6 py-2 rounded-full hover:bg-[#004346] text-center">
							{t.nav.cta}
						</a>
					</div>
				</div>
			</div>
		</div>
	</nav>
</header>

<script>
	// Mobile menu toggle
	const mobileMenuButton = document.getElementById('mobile-menu-button');
	const mobileMenu = document.getElementById('mobile-menu');
	const mobileServicesButton = document.getElementById('mobile-services-button');
	const mobileServicesDropdown = document.getElementById('mobile-services-dropdown');

	mobileMenuButton?.addEventListener('click', () => {
		mobileMenu?.classList.toggle('hidden');
	});

	mobileServicesButton?.addEventListener('click', () => {
		mobileServicesDropdown?.classList.toggle('hidden');
	});
</script>
