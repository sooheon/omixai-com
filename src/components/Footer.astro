---
import { getTranslations } from '../content/translations';

interface Props {
	lang: 'en' | 'ko';
}

const { lang } = Astro.props;
const t = getTranslations(lang);

const homeUrl = lang === 'en' ? '/en' : '/';
---

<footer class="bg-gray-900 text-white py-8">
	<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
		<div class="grid grid-cols-1 md:grid-cols-3 gap-8">
			<!-- Company Info -->
			<div>
				<a href={homeUrl}><img src="/bwlogo.png" alt="OmixAI" class="h-8 mb-3 invert" /></a>
				<p class="text-gray-400 text-sm mb-2">{lang === 'en' ? 'CEO: Dongmyeong Shin, Ph.D.' : '대표이사: 신동명'}</p>
				<p class="text-gray-400 text-sm">{t.footer.tagline}</p>
			</div>

			<!-- Contact Info -->
			<div>
				<h3 class="font-semibold mb-3">{lang === 'en' ? 'Contact' : '연락처'}</h3>
				<div class="text-gray-400 text-sm space-y-1">
					<p><a href={`mailto:${t.contact.email.value}`} class="hover:text-[#09bc8a]">{t.contact.email.value}</a></p>
					<p>{t.contact.phone.value}</p>
				</div>
			</div>

			<!-- Address -->
			<div>
				<h3 class="font-semibold mb-3">{lang === 'en' ? 'Address' : '주소'}</h3>
				<div class="text-gray-400 text-sm space-y-1">
					<p>{t.contact.address.value}</p>
					<p>{t.contact.address.detail}</p>
				</div>
			</div>
		</div>
	</div>
</footer>
