---
import '../styles/global.css';
import Layout from '../components/Layout.astro';
import ParticleBackground from '../components/ParticleBackground.astro';
import { getTranslations } from '../content/translations';

const t = getTranslations('en');
---

<Layout lang="en" title={t.meta.title} currentPage="home" lightHeader={false}>
	<!-- Hero Section -->
	<section class="relative bg-gradient-to-b from-slate-900 to-slate-800 min-h-[600px] overflow-hidden flex items-center">
		<ParticleBackground />
		<div class="relative z-10 max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 w-full">
			<div class="max-w-2xl">
				<h1 class="text-3xl md:text-5xl lg:text-6xl text-white mb-8 leading-none animate-fade-in-up">
					<span class="text-gradient">{t.hero.title}</span>
				</h1>
				<p class="text-lg text-slate-300 mb-8 animate-fade-in-up animate-delay-200">
					{t.hero.subtitle}
				</p>
				<a href="/contact" class="btn-primary inline-block px-8 py-4 rounded-full text-lg animate-fade-in-up animate-delay-400">
					{t.hero.cta}
				</a>
			</div>
		</div>
	</section>

	<!-- KPIs -->
	<section class="py-16">
		<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
			<div class="mb-12">
				<h2 class="text-2xl md:text-3xl text-white mb-4 animate-fade-in-up">The Future of Deep Proteomics Understanding</h2>
				<p class="text-slate-400 max-w-2xl animate-fade-in-up animate-delay-100">Powered by Orbitrap Astral mass spectrometry and AI-driven analysis, we deliver unmatched depth, speed, and reproducibility for your research.</p>
			</div>
			<div class="grid grid-cols-1 md:grid-cols-3 gap-8">
				{t.kpis.items.map((kpi, i) => (
					<div class={`text-center glass-card rounded-xl p-8 animate-fade-in-up animate-delay-${(i + 1) * 100}`}>
						<div class="text-4xl md:text-5xl text-[#1ea4a1] mb-2">{kpi.value}</div>
						<p class="text-slate-400">{kpi.label}</p>
					</div>
				))}
			</div>
		</div>
	</section>

	<!-- Services -->
	<section id="services" class="py-16">
		<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
			<div class="mb-12">
				<h2 class="text-2xl md:text-3xl text-white mb-4 animate-fade-in-up">Choose Your Sample Type</h2>
				<p class="text-slate-400 max-w-2xl animate-fade-in-up animate-delay-100">From cell cultures to clinical biofluids, we have optimized workflows for every sample type. Select yours and receive publication-ready results in weeks.</p>
			</div>
			<div class="flex flex-wrap justify-center gap-8">
				{t.services.items.map((service, i) => (
					<a href={`/services/${service.slug}`} class={`glass-card rounded-xl p-6 text-center hover-glow transition-all hover:scale-105 min-w-[140px] animate-fade-in-up animate-delay-${(i + 1) * 100}`}>
						<div class="text-4xl mb-3 opacity-80">{service.icon}</div>
						<h3 class="text-sm text-slate-200">{service.title}</h3>
					</a>
				))}
			</div>
		</div>
	</section>

	<!-- Testimonials (hidden)
	<section class="py-12 bg-slate-800">
		<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
			<h2 class="text-2xl text-center text-white mb-6">{t.testimonials.title}</h2>
			<div class="grid grid-cols-1 md:grid-cols-3 gap-6">
				{t.testimonials.items.map((testimonial) => (
					<div class="glass-card p-6 rounded-xl">
						<p class="text-slate-300 mb-4 italic">
							"{testimonial.quote}"
						</p>
						<p class="text-white">{testimonial.author}</p>
						<p class="text-sm text-slate-500">{testimonial.institution}</p>
					</div>
				))}
			</div>
		</div>
	</section>
	-->

	<!-- How It Works -->
	<section id="how-it-works" class="py-16">
		<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
			<h2 class="text-2xl md:text-3xl text-white mb-12 animate-fade-in-up">{t.howItWorks.title}</h2>
			<div class="grid grid-cols-1 md:grid-cols-3 gap-8">
				{t.howItWorks.steps.map((step, i) => (
					<div class={`text-center animate-fade-in-up animate-delay-${(i + 1) * 100}`}>
						<div class="glass-card rounded-full w-20 h-20 flex items-center justify-center mx-auto mb-4 glow">
							<span class="text-2xl text-emerald-400">{step.number}</span>
						</div>
						<h3 class="text-lg text-white mb-2">{step.title}</h3>
						<p class="text-slate-400">{step.description}</p>
					</div>
				))}
			</div>
		</div>
	</section>
</Layout>
