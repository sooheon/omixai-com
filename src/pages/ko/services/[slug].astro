---
import '../../../styles/global.css';
import Layout from '../../../components/Layout.astro';
import { getTranslations } from '../../../content/translations';

const lang = 'ko';
const t = getTranslations(lang);

export async function getStaticPaths() {
  const serviceFiles = import.meta.glob('../../../content/services/*.json', { eager: true });
  const services = Object.values(serviceFiles).map((mod: any) => mod.default || mod);

  return services.map((service) => ({
    params: { slug: service.slug },
    props: { service },
  }));
}

const { service } = Astro.props;
---

<Layout lang="ko" title={`${service.title[lang]} - 오믹스AI`} currentPage="services" serviceSlug={service.slug} lightHeader={false}>

	<!-- Hero Section -->
	<section class="bg-section-alt py-16">
		<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
			<h1 class="text-3xl md:text-4xl text-heading mb-3 animate-fade-in-up">
				{service.title[lang]}
			</h1>
			<p class="text-lg text-body animate-fade-in-up">
				{service.subtitle[lang]}
			</p>
		</div>
	</section>

	<!-- Overview Section -->
	<section class="py-12 bg-section">
		<div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
			<p class="text-body mb-12 text-center animate-fade-in-up">
				{service.description[lang]}
			</p>

			<div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-16">
				{service.features.map((feature) => (
					<div class="glass-card rounded-xl p-6 text-center animate-fade-in-up">
						<h3 class="text-heading mb-2">{feature.title[lang]}</h3>
						<p class="text-muted text-sm">{feature.description[lang]}</p>
					</div>
				))}
			</div>
		</div>
	</section>

	<!-- Applications Section -->
	<section class="py-12 bg-section-alt">
		<div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
			<h2 class="text-3xl text-heading mb-8 text-center animate-fade-in-up">
				{service.applications.title[lang]}
			</h2>
			<div class="grid grid-cols-1 md:grid-cols-2 gap-6">
				{service.applications.items.map((item) => (
					<div class="glass-card rounded-xl p-6 animate-fade-in-up">
						<h4 class="text-heading mb-2 font-semibold">{item.title[lang]}</h4>
						<p class="text-muted text-sm">{item.description[lang]}</p>
					</div>
				))}
			</div>
		</div>
	</section>

	<!-- Process Section -->
	<section class="py-12 bg-section">
		<div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
			<h2 class="text-3xl text-heading mb-8 text-center animate-fade-in-up">
				{service.process.title[lang]}
			</h2>
			<div class="space-y-6">
				{service.process.steps.map((step, i) => (
					<div class="glass-card rounded-xl p-6 animate-fade-in-up">
						<div class="flex gap-4">
							<div class="flex-shrink-0 w-10 h-10 rounded-full bg-[var(--brand-teal)] text-white flex items-center justify-center font-bold">
								{i + 1}
							</div>
							<div class="flex-1">
								<h4 class="text-heading mb-2 font-semibold">{step.title[lang]}</h4>
								<p class="text-muted">{step.description[lang]}</p>
							</div>
						</div>
					</div>
				))}
			</div>
		</div>
	</section>

	<!-- Deliverables Section -->
	<section class="py-12 bg-section-alt">
		<div class="max-w-5xl mx-auto px-4 sm:px-6 lg:px-8">
			<h2 class="text-3xl text-heading mb-8 text-center animate-fade-in-up">
				{service.deliverables.title[lang]}
			</h2>
			<div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
				<!-- Deliverables List (2/3 width) -->
				<div class="lg:col-span-2 glass-card rounded-xl p-8 animate-fade-in-up">
					<ul class="space-y-3">
						{service.deliverables.items.map((item) => (
							<li class="flex items-start gap-3">
								<svg class="w-6 h-6 text-[var(--brand-teal)] flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
								</svg>
								<span class="text-body">{item[lang]}</span>
							</li>
						))}
					</ul>
				</div>

				<!-- Sample Report Card (1/3 width) -->
				{service.sampleReport && (
					<div class="glass-card rounded-xl p-6 animate-fade-in-up flex flex-col">
						<div class="flex items-center gap-3 mb-4">
							<div class="w-12 h-12 bg-[var(--brand-teal)]/10 rounded-lg flex items-center justify-center">
								<svg class="w-6 h-6 text-[var(--brand-teal)]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
								</svg>
							</div>
							<div>
								<h3 class="text-heading text-lg">샘플 리포트</h3>
								<p class="text-muted text-sm">분석 결과 미리보기</p>
							</div>
						</div>

						<form id="sample-report-form" class="flex-1 flex flex-col" data-report-url={service.sampleReport}>
							<div class="space-y-3 mb-4">
								<input
									type="email"
									name="email"
									required
									placeholder="이메일 *"
									class="w-full px-3 py-2 rounded-lg bg-[var(--bg-input)] text-body border border-subtle focus:border-emphasis focus:outline-none focus:ring-2 focus:ring-[var(--brand-teal)]/50 transition-all text-sm"
								/>
								<input
									type="text"
									name="company"
									required
									placeholder="회사/기관 *"
									class="w-full px-3 py-2 rounded-lg bg-[var(--bg-input)] text-body border border-subtle focus:border-emphasis focus:outline-none focus:ring-2 focus:ring-[var(--brand-teal)]/50 transition-all text-sm"
								/>
							</div>
							<button
								type="submit"
								class="mt-auto w-full btn-primary px-4 py-2.5 rounded-full text-sm font-semibold transition-all hover:scale-105 flex items-center justify-center gap-2"
							>
								<svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4"></path>
								</svg>
								다운로드
							</button>
						</form>

						<p class="text-muted text-xs mt-3 text-center">정보는 안전하게 보호됩니다</p>
					</div>
				)}
			</div>
		</div>
	</section>

	<!-- Sample Requirements Section -->
	<section class="py-12 bg-section">
		<div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
			<h2 class="text-3xl text-heading mb-8 text-center animate-fade-in-up">
				{service.sampleRequirements.title[lang]}
			</h2>
			<div class="glass-card rounded-xl p-8 animate-fade-in-up">
				<div class="space-y-4">
					{service.sampleRequirements.items.map((item) => (
						<div class="flex flex-col sm:flex-row sm:justify-between border-b border-subtle pb-4 last:border-b-0 last:pb-0">
							<span class="text-body font-medium mb-1 sm:mb-0">{item.label[lang]}</span>
							<span class="text-muted sm:text-right">{item.value[lang]}</span>
						</div>
					))}
				</div>
			</div>
		</div>
	</section>

	<!-- CTA Section -->
	<section class="py-12 bg-section">
		<div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
			<h3 class="text-2xl text-heading mb-4 animate-fade-in-up">{t.cta.service.title}</h3>
			<p class="text-body mb-8 animate-fade-in-up">{t.cta.service.description}</p>
			<a href="/ko/contact" class="btn-primary inline-block px-8 py-4 rounded-full text-lg animate-fade-in-up">
				{t.nav.orderNow}
			</a>
		</div>
	</section>
</Layout>

<script>
	document.addEventListener('DOMContentLoaded', function() {
		const form = document.getElementById('sample-report-form') as HTMLFormElement;
		if (!form) return;

		const reportUrl = form.dataset.reportUrl;

		// Check if user already submitted
		const savedLead = localStorage.getItem('omixai-lead');
		if (savedLead) {
			const lead = JSON.parse(savedLead);
			const emailInput = form.querySelector('input[name="email"]') as HTMLInputElement;
			const companyInput = form.querySelector('input[name="company"]') as HTMLInputElement;
			if (emailInput) emailInput.value = lead.email || '';
			if (companyInput) companyInput.value = lead.company || '';
		}

		form.addEventListener('submit', async function(e) {
			e.preventDefault();

			const email = (form.querySelector('input[name="email"]') as HTMLInputElement).value;
			const company = (form.querySelector('input[name="company"]') as HTMLInputElement).value;
			const button = form.querySelector('button[type="submit"]') as HTMLButtonElement;

			// Save to localStorage
			localStorage.setItem('omixai-lead', JSON.stringify({ email, company, timestamp: Date.now() }));

			// Submit to Formspree (fire and forget)
			const formData = new FormData();
			formData.append('email', email);
			formData.append('company', company);
			formData.append('report', reportUrl || '');
			formData.append('timestamp', new Date().toISOString());

			fetch('https://formspree.io/f/FORMSPREE_ID', {
				method: 'POST',
				body: formData,
				headers: { 'Accept': 'application/json' }
			}).catch(() => {}); // Ignore errors, don't block download

			// Trigger download with original filename
			if (reportUrl) {
				const link = document.createElement('a');
				link.href = reportUrl;
				link.download = reportUrl.split('/').pop() || 'sample-report.pdf';
				document.body.appendChild(link);
				link.click();
				document.body.removeChild(link);
			}

			// Update button to show success
			if (button) {
				button.innerHTML = `<svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path></svg> 완료`;
				button.disabled = true;
				setTimeout(() => {
					button.innerHTML = `<svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4"></path></svg> 다운로드`;
					button.disabled = false;
				}, 3000);
			}
		});
	});
</script>
