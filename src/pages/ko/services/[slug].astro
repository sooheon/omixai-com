---
import '../../../styles/global.css';
import Layout from '../../../components/Layout.astro';
import { getTranslations } from '../../../content/translations';

const lang = 'ko';
const t = getTranslations(lang);

export async function getStaticPaths() {
  const serviceFiles = import.meta.glob('../../../content/services/*.json', { eager: true });
  const services = Object.values(serviceFiles).map((mod: any) => mod.default || mod);

  return services.map((service) => ({
    params: { slug: service.slug },
    props: { service },
  }));
}

const { service } = Astro.props;
---

<Layout lang="ko" title={`${service.title[lang]} - 오믹스AI`} currentPage="services" serviceSlug={service.slug} lightHeader={false}>

	<!-- Hero Section -->
	<section class="bg-section-alt py-16">
		<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
			<h1 class="text-3xl md:text-4xl text-heading mb-3 animate-fade-in-up">
				{service.title[lang]}
			</h1>
			<p class="text-lg text-body animate-fade-in-up animate-delay-200">
				{service.subtitle[lang]}
			</p>
		</div>
	</section>

	<!-- Content Section -->
	<section class="py-12 bg-section">
		<div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
			<p class="text-body mb-8 text-center animate-fade-in-up animate-delay-300">
				{service.description[lang]}
			</p>

			<div class="grid grid-cols-1 md:grid-cols-3 gap-6">
				{service.features.map((feature, i) => (
					<div class={`glass-card rounded-xl p-6 text-center animate-fade-in-up animate-delay-${(i + 4) * 100}`}>
						<h3 class="text-heading mb-2">{feature.title[lang]}</h3>
						<p class="text-muted text-sm">{feature.description[lang]}</p>
					</div>
				))}
			</div>

			<div class="mt-12 text-center animate-fade-in-up animate-delay-600">
				<a href={`mailto:omixai@omixai.com?subject=[${encodeURIComponent(service.title[lang])}] 문의`} class="btn-primary inline-block px-6 py-3 rounded-full">
					{t.nav.orderNow}
				</a>
			</div>
		</div>
	</section>
</Layout>
