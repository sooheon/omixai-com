---
import '../../styles/global.css';
import Layout from '../../components/Layout.astro';
import { getTranslations } from '../../content/translations';

const lang = 'en';
const t = getTranslations(lang);

export async function getStaticPaths() {
  const serviceFiles = import.meta.glob('../../content/services/*.json', { eager: true });
  const services = Object.values(serviceFiles).map((mod: any) => mod.default || mod);

  return services.map((service) => ({
    params: { slug: service.slug },
    props: { service },
  }));
}

const { service } = Astro.props;
---

<Layout lang="en" title={`${service.title[lang]} - OmixAI`} currentPage="services" serviceSlug={service.slug} lightHeader={true}>

	<!-- Hero Section -->
	<section class="bg-[#dfecf0] py-10">
			<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
				<h1 class="text-3xl md:text-4xl font-bold text-gray-900 mb-3">
					{service.title[lang]}
				</h1>
				<p class="text-lg text-gray-700">
					{service.subtitle[lang]}
				</p>
			</div>
		</section>

		<!-- Content Section -->
		<section class="py-12 bg-white">
			<div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
				<p class="text-gray-700 mb-8 text-center">
					{service.description[lang]}
				</p>

				<div class="grid grid-cols-1 md:grid-cols-3 gap-6">
					{service.features.map((feature) => (
						<div class="text-center">
							<h3 class="font-bold text-gray-900 mb-2">{feature.title[lang]}</h3>
							<p class="text-gray-600 text-sm">{feature.description[lang]}</p>
						</div>
					))}
				</div>

				<div class="mt-12 text-center">
					<a href={`mailto:omixai@omixai.com?subject=[${encodeURIComponent(service.title[lang])}] Inquiry`} class="inline-block bg-[#09bc8a] text-white px-6 py-3 rounded-full font-semibold hover:bg-[#004346]">
						{t.nav.orderNow}
					</a>
				</div>
		</div>
	</section>
</Layout>
