---
import '../styles/global.css';
import Layout from '../components/Layout.astro';
import { getTranslations } from '../content/translations';

const t = getTranslations('en');
---

<Layout lang="en" title={`${t.resources.title} - ${t.meta.title}`} currentPage="resources" lightHeader={false}>
	<style>
		details > summary {
			cursor: pointer;
			list-style: none;
			position: relative;
			padding-right: 2rem;
		}
		details > summary::-webkit-details-marker {
			display: none;
		}
		details > summary::after {
			content: '+';
			position: absolute;
			right: 0;
			top: 50%;
			transform: translateY(-50%);
			font-size: 1.5rem;
			font-weight: 300;
			color: var(--brand-teal);
			transition: all 0.3s ease;
		}
		details[open] > summary::after {
			content: '−';
			transform: translateY(-50%) rotate(180deg);
		}
		details[open] > summary {
			margin-bottom: 1rem;
		}
		.faq-item {
			border-bottom: 1px solid var(--border-subtle);
		}
		.faq-item:last-child {
			border-bottom: none;
		}
		.faq-content {
			display: grid;
			grid-template-rows: 0fr;
			transition: grid-template-rows 0.3s ease-out;
		}
		details[open] .faq-content {
			grid-template-rows: 1fr;
		}
		.faq-content > div {
			overflow: hidden;
		}
		.tab-button {
			transition: all 0.2s ease;
		}
		.tab-button.active {
			color: #31c27c;
			border-bottom-color: #31c27c;
		}
		.tab-panel {
			display: none;
		}
		.tab-panel.active {
			display: block;
		}
		.service-tab-btn {
			transition: all 0.2s ease;
			cursor: pointer;
		}
		.service-tab-btn.active {
			color: #31c27c;
			border-bottom-color: #31c27c;
		}
		.service-tab-btn:hover {
			color: #31c27c;
		}
		.service-tab-content {
			display: none;
		}
		.service-tab-content.active {
			display: block;
		}
	</style>

	<!-- Hero Section -->
	<section class="bg-section-alt py-16">
		<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
			<h1 class="text-3xl md:text-4xl text-heading mb-3 animate-fade-in-up">
				{t.resources.title}
			</h1>
			<p class="text-lg text-body animate-fade-in-up animate-delay-200">
				{t.resources.subtitle}
			</p>
		</div>
	</section>

	<!-- Tabs -->
	<section class="bg-section pt-8">
		<div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
			<div class="flex justify-center gap-8 border-b border-white/10">
				<a
					href="#faq"
					class="tab-button active px-4 py-3 text-body border-b-2 border-transparent no-underline"
					data-tab="faq"
				>
					FAQ
				</a>
				<a
					href="#technical"
					class="tab-button px-4 py-3 text-body border-b-2 border-transparent no-underline"
					data-tab="technical"
				>
					Technical Documentation
				</a>
			</div>
		</div>
	</section>

	<!-- FAQ Tab -->
	<section class="tab-panel active py-12 bg-section" id="faq-panel">
		<div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
			<h2 class="text-3xl text-center text-heading mb-12">Frequently Asked Questions</h2>

				<!-- Ordering & Pricing -->
				<div class="mb-12">
					<h3 class="text-2xl mb-6 text-body">{t.resources.faq.ordering.title}</h3>
					<div>
						{t.resources.faq.ordering.items.map((item) => (
							<details class="faq-item">
								<summary class="py-4 text-body hover:text-[var(--brand-teal)]">
									{item.question}
								</summary>
								<div class="faq-content">
									<div class="pb-4 text-muted">
										{item.answer}
									</div>
								</div>
							</details>
						))}
					</div>
				</div>

				<!-- Sample Preparation -->
				<div class="mb-12">
					<h3 class="text-2xl mb-6 text-body">{t.resources.faq.samplePrep.title}</h3>
					<div>
						{t.resources.faq.samplePrep.items.map((item) => (
							<details class="faq-item">
								<summary class="py-4 text-body hover:text-[var(--brand-teal)]">
									{item.question}
								</summary>
								<div class="faq-content">
									<div class="pb-4 text-muted">
										{item.answer}
									</div>
								</div>
							</details>
						))}
					</div>
				</div>

				<!-- Technical Details -->
				<div class="mb-12">
					<h3 class="text-2xl mb-6 text-body">{t.resources.faq.technical.title}</h3>
					<div>
						{t.resources.faq.technical.items.map((item) => (
							<details class="faq-item">
								<summary class="py-4 text-body hover:text-[var(--brand-teal)]">
									{item.question}
								</summary>
								<div class="faq-content">
									<div class="pb-4 text-muted">
										{item.answer}
									</div>
								</div>
							</details>
						))}
					</div>
				</div>

			<!-- CTA -->
			<div class="text-center mt-16">
				<p class="text-xl text-body mb-6">Have more questions?</p>
				<a href="mailto:omixai@omixai.com" class="btn-primary inline-block px-8 py-4 rounded-full text-lg">
					Contact Us
				</a>
			</div>
		</div>
	</section>

	<!-- Technical Documentation Tab -->
	<section class="tab-panel py-12 bg-section" id="technical-panel">
		<div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
			<h2 class="text-3xl text-center text-heading mb-12">Technical Documentation</h2>

			<!-- Platform Specs -->
			<div class="mb-12">
				<h3 class="text-2xl mb-6 text-body">Mass Spectrometry Platform</h3>
				<div class="border-b border-subtle pb-6">
					<h4 class="text-lg text-heading mb-4">Thermo Fisher Orbitrap Astral</h4>
					<ul class="space-y-2 text-body">
						<li><strong class="text-body">Resolution:</strong> 240,000 FWHM at m/z 200</li>
						<li><strong class="text-body">Mass Accuracy:</strong> &lt; 1 ppm</li>
						<li><strong class="text-body">Scan Speed:</strong> 200 Hz</li>
						<li><strong class="text-body">Dynamic Range:</strong> &gt; 5 orders of magnitude</li>
						<li><strong class="text-body">Sensitivity:</strong> Sub-femtomole detection limits</li>
					</ul>
				</div>
			</div>

			<!-- Proteomics Workflow -->
			<div class="mb-12">
				<h3 class="text-2xl mb-6 text-body">Standard Proteomics Workflow</h3>
				<div class="space-y-6">
					<div class="border-b border-subtle pb-6">
						<h4 class="text-heading mb-2">1. Sample Preparation</h4>
						<p class="text-muted">Protein extraction, reduction, alkylation, and tryptic digestion using optimized protocols for each sample type.</p>
					</div>
					<div class="border-b border-subtle pb-6">
						<h4 class="text-heading mb-2">2. Peptide Cleanup</h4>
						<p class="text-muted">C18 solid-phase extraction to remove salts and contaminants.</p>
					</div>
					<div class="border-b border-subtle pb-6">
						<h4 class="text-heading mb-2">3. LC-MS/MS Analysis</h4>
						<p class="text-muted">90-120 minute gradient on nanoflow HPLC coupled to Orbitrap Astral with data-dependent acquisition (DDA).</p>
					</div>
					<div class="border-b border-subtle pb-6">
						<h4 class="text-heading mb-2">4. Data Processing</h4>
						<p class="text-muted">Database searching with FragPipe or MaxQuant, FDR filtering at 1% protein and peptide level.</p>
					</div>
					<div>
						<h4 class="text-heading mb-2">5. Quantification & Analysis</h4>
						<p class="text-muted">Label-free quantification (LFQ) or isobaric labeling (TMT), statistical analysis, pathway enrichment.</p>
					</div>
				</div>
			</div>

			<!-- Performance Metrics -->
			<div class="mb-12">
				<h3 class="text-2xl mb-6 text-body">Typical Performance Metrics</h3>
				<div class="overflow-x-auto">
					<table class="w-full">
						<thead>
							<tr class="border-b border-subtle">
								<th class="text-left py-2 text-body">Sample Type</th>
								<th class="text-left py-2 text-body">Proteins Identified</th>
								<th class="text-left py-2 text-body">Peptides Identified</th>
							</tr>
						</thead>
						<tbody class="text-body">
							<tr class="border-b border-subtle">
								<td class="py-2">Human cell line (1 μg)</td>
								<td class="py-2">8,000-10,000</td>
								<td class="py-2">80,000-100,000</td>
							</tr>
							<tr class="border-b border-subtle">
								<td class="py-2">Human tissue (10 mg)</td>
								<td class="py-2">9,000-12,000</td>
								<td class="py-2">90,000-120,000</td>
							</tr>
							<tr>
								<td class="py-2">Human plasma (10 μL)</td>
								<td class="py-2">500-800</td>
								<td class="py-2">5,000-8,000</td>
							</tr>
						</tbody>
					</table>
				</div>
			</div>

			<!-- Service-Specific Sample Requirements -->
			<div class="mb-12">
				<h3 class="text-2xl mb-6 text-body">Sample Requirements by Service</h3>

				<!-- Service Tabs -->
				<div class="flex gap-2 mb-6 border-b border-subtle overflow-x-auto">
					<button class="service-tab-btn active px-4 py-2 text-body border-b-2 border-transparent whitespace-nowrap" data-service="cell-culture" data-section="requirements">
						Cell Culture
					</button>
					<button class="service-tab-btn px-4 py-2 text-body border-b-2 border-transparent whitespace-nowrap" data-service="tissue" data-section="requirements">
						Tissue
					</button>
					<button class="service-tab-btn px-4 py-2 text-body border-b-2 border-transparent whitespace-nowrap" data-service="blood" data-section="requirements">
						Blood
					</button>
					<button class="service-tab-btn px-4 py-2 text-body border-b-2 border-transparent whitespace-nowrap" data-service="custom" data-section="requirements">
						Custom
					</button>
				</div>

				<!-- Tab Content -->
				<div class="service-tab-content active" data-service="cell-culture" data-section="requirements">
					<h4 class="text-xl text-heading mb-4">Cell Culture & Organoids</h4>
					<div class="space-y-3 text-body">
						<div class="border-b border-subtle pb-3">
							<span class="font-medium">Cell Lines:</span> 1-5 million cells (cell pellet or lysate)
						</div>
						<div class="border-b border-subtle pb-3">
							<span class="font-medium">Organoids:</span> 10-20mg tissue (wet weight)
						</div>
						<div class="border-b border-subtle pb-3">
							<span class="font-medium">Preparation:</span> Wash with PBS, snap freeze on dry ice
						</div>
						<div class="border-b border-subtle pb-3">
							<span class="font-medium">Storage:</span> -80°C, ship on dry ice
						</div>
						<div>
							<span class="font-medium">Replicates:</span> Minimum 3-4 biological replicates per group recommended
						</div>
					</div>
				</div>

				<div class="service-tab-content" data-service="tissue" data-section="requirements">
					<h4 class="text-xl text-heading mb-4">Tissue (FFPE & Frozen)</h4>
					<div class="space-y-3 text-body">
						<div class="border-b border-subtle pb-3">
							<span class="font-medium">Frozen Tissue:</span> 10-30mg (wet weight)
						</div>
						<div class="border-b border-subtle pb-3">
							<span class="font-medium">FFPE Blocks/Slides:</span> 3-5 sections of 10μm or 1-2mm³ core
						</div>
						<div class="border-b border-subtle pb-3">
							<span class="font-medium">Preparation:</span> Snap freeze fresh tissue in liquid nitrogen or on dry ice
						</div>
						<div class="border-b border-subtle pb-3">
							<span class="font-medium">Storage:</span> Frozen: -80°C / FFPE: Room temperature
						</div>
						<div>
							<span class="font-medium">Replicates:</span> Minimum 5-6 biological replicates per group (considering patient variation)
						</div>
					</div>
				</div>

				<div class="service-tab-content" data-service="blood" data-section="requirements">
					<h4 class="text-xl text-heading mb-4">Blood (Plasma & Serum)</h4>
					<div class="space-y-3 text-body">
						<div class="border-b border-subtle pb-3">
							<span class="font-medium">Volume:</span> 10-50μL (depending on analysis type)
						</div>
						<div class="border-b border-subtle pb-3">
							<span class="font-medium">Collection Tube:</span> EDTA (plasma) or SST/plain (serum)
						</div>
						<div class="border-b border-subtle pb-3">
							<span class="font-medium">Processing:</span> Centrifuge within 2h of collection (1,500-2,000g, 10 min)
						</div>
						<div class="border-b border-subtle pb-3">
							<span class="font-medium">Storage:</span> -80°C (long-term) or -20°C (short-term, within 1 week)
						</div>
						<div>
							<span class="font-medium">Replicates:</span> Minimum 10-20 samples per group (considering inter-individual variation)
						</div>
					</div>
				</div>

				<div class="service-tab-content" data-service="custom" data-section="requirements">
					<h4 class="text-xl text-heading mb-4">Custom Samples (CSF, Media, Exosomes)</h4>
					<div class="space-y-3 text-body">
						<div class="border-b border-subtle pb-3">
							<span class="font-medium">CSF:</span> 50-200μL (depending on analysis type)
						</div>
						<div class="border-b border-subtle pb-3">
							<span class="font-medium">Conditioned Media:</span> 0.5-2mL (depending on cell number and culture time)
						</div>
						<div class="border-b border-subtle pb-3">
							<span class="font-medium">Exosomes:</span> 10-100μg protein (after purification)
						</div>
						<div class="border-b border-subtle pb-3">
							<span class="font-medium">Storage:</span> -80°C, avoid repeated freeze/thaw
						</div>
						<div>
							<span class="font-medium">Shipping:</span> Ship on dry ice
						</div>
					</div>
				</div>
			</div>

			<!-- Analysis Workflows by Service -->
			<div class="mb-12">
				<h3 class="text-2xl mb-6 text-body">Analysis Workflows by Service</h3>

				<!-- Service Tabs -->
				<div class="flex gap-2 mb-6 border-b border-subtle overflow-x-auto">
					<button class="service-tab-btn active px-4 py-2 text-body border-b-2 border-transparent whitespace-nowrap" data-service="cell-culture" data-section="workflows">
						Cell Culture
					</button>
					<button class="service-tab-btn px-4 py-2 text-body border-b-2 border-transparent whitespace-nowrap" data-service="tissue" data-section="workflows">
						Tissue
					</button>
					<button class="service-tab-btn px-4 py-2 text-body border-b-2 border-transparent whitespace-nowrap" data-service="blood" data-section="workflows">
						Blood
					</button>
					<button class="service-tab-btn px-4 py-2 text-body border-b-2 border-transparent whitespace-nowrap" data-service="custom" data-section="workflows">
						Custom
					</button>
				</div>

				<!-- Tab Content -->
				<div class="service-tab-content active" data-service="cell-culture" data-section="workflows">
					<h4 class="text-xl text-heading mb-4">Cell Culture & Organoids</h4>
					<div class="space-y-4">
						<div class="border-b border-subtle pb-4">
							<p class="text-heading mb-1">1. Sample Receipt & QC</p>
							<p class="text-muted text-sm">Quality check upon arrival and BCA protein quantification. Assess sample processability and notify results.</p>
						</div>
						<div class="border-b border-subtle pb-4">
							<p class="text-heading mb-1">2. Automated Processing</p>
							<p class="text-muted text-sm">Liquid Handler-based automated system performs extraction, reduction, alkylation, and trypsin digestion in a single tube.</p>
						</div>
						<div class="border-b border-subtle pb-4">
							<p class="text-heading mb-1">3. Peptide Cleanup</p>
							<p class="text-muted text-sm">Remove salts and contaminants using Magnetic Bead technology. Recover high-purity peptides.</p>
						</div>
						<div class="border-b border-subtle pb-4">
							<p class="text-heading mb-1">4. LC-MS/MS Analysis</p>
							<p class="text-muted text-sm">Orbitrap Astral DIA mode with 20-40 min fast gradient. Identify 8,000-10,000 proteins per sample.</p>
						</div>
						<div class="border-b border-subtle pb-4">
							<p class="text-heading mb-1">5. Data Analysis</p>
							<p class="text-muted text-sm">Precise search with DIA-NN deep learning software. Statistical and pathway analysis.</p>
						</div>
						<div>
							<p class="text-heading mb-1">6. Report Delivery</p>
							<p class="text-muted text-sm">Comprehensive report, raw data, and analysis files. Results within 2-3 weeks.</p>
						</div>
					</div>
				</div>

				<div class="service-tab-content" data-service="tissue" data-section="workflows">
					<h4 class="text-xl text-heading mb-4">Tissue (FFPE & Frozen)</h4>
					<div class="space-y-4">
						<div class="border-b border-subtle pb-4">
							<p class="text-heading mb-1">1. Sample Assessment</p>
							<p class="text-muted text-sm">Verify tissue type and assess quality. H&E staining confirmation for FFPE.</p>
						</div>
						<div class="border-b border-subtle pb-4">
							<p class="text-heading mb-1">2. Protein Extraction</p>
							<p class="text-muted text-sm">Deparaffinization and heat-based crosslink reversal for FFPE. Mechanical homogenization for frozen tissue.</p>
						</div>
						<div class="border-b border-subtle pb-4">
							<p class="text-heading mb-1">3. Digestion & Cleanup</p>
							<p class="text-muted text-sm">S-Trap or SP3-based protein cleanup and trypsin digestion.</p>
						</div>
						<div class="border-b border-subtle pb-4">
							<p class="text-heading mb-1">4. LC-MS/MS Analysis</p>
							<p class="text-muted text-sm">Orbitrap Astral DIA identifies 9,000-12,000 proteins per tissue. 60-90 min gradient.</p>
						</div>
						<div class="border-b border-subtle pb-4">
							<p class="text-heading mb-1">5. Data Analysis</p>
							<p class="text-muted text-sm">Tissue-specific library search and statistical analysis. Integration with pathology data available.</p>
						</div>
						<div>
							<p class="text-heading mb-1">6. Report Delivery</p>
							<p class="text-muted text-sm">Comprehensive report including clinical relevance. Results within 3-4 weeks.</p>
						</div>
					</div>
				</div>

				<div class="service-tab-content" data-service="blood" data-section="workflows">
					<h4 class="text-xl text-heading mb-4">Blood (Plasma & Serum)</h4>
					<div class="space-y-4">
						<div class="border-b border-subtle pb-4">
							<p class="text-heading mb-1">1. Sample Receipt & QC</p>
							<p class="text-muted text-sm">Confirm sample arrival and check for hemolysis. BCA quantification and quality assessment.</p>
						</div>
						<div class="border-b border-subtle pb-4">
							<p class="text-heading mb-1">2. High-Abundance Protein Depletion (Optional)</p>
							<p class="text-muted text-sm">Remove albumin and immunoglobulins to extend dynamic range and enhance low-abundance biomarker detection.</p>
						</div>
						<div class="border-b border-subtle pb-4">
							<p class="text-heading mb-1">3. Protein Digestion</p>
							<p class="text-muted text-sm">S-Trap-based cleanup and trypsin digestion. Apply plasma/serum-specialized workflow.</p>
						</div>
						<div class="border-b border-subtle pb-4">
							<p class="text-heading mb-1">4. LC-MS/MS Analysis</p>
							<p class="text-muted text-sm">Orbitrap Astral DIA quantifies 500-1,000 proteins (native) or 2,000-3,000 proteins (depleted).</p>
						</div>
						<div class="border-b border-subtle pb-4">
							<p class="text-heading mb-1">5. Data Analysis & Validation</p>
							<p class="text-muted text-sm">Plasma-specific library search. Correlation with clinical variables and statistical validation.</p>
						</div>
						<div>
							<p class="text-heading mb-1">6. Biomarker Reporting</p>
							<p class="text-muted text-sm">Candidate biomarker list and clinical significance interpretation. Results within 2-3 weeks.</p>
						</div>
					</div>
				</div>

				<div class="service-tab-content" data-service="custom" data-section="workflows">
					<h4 class="text-xl text-heading mb-4">Custom Samples</h4>
					<div class="space-y-4">
						<div class="border-b border-subtle pb-4">
							<p class="text-heading mb-1">1. Sample Assessment & Custom Design</p>
							<p class="text-muted text-sm">Verify sample type and assess quality. Design optimal workflow for research goals with pre-analysis consultation.</p>
						</div>
						<div class="border-b border-subtle pb-4">
							<p class="text-heading mb-1">2. Concentration & Cleanup (If Needed)</p>
							<p class="text-muted text-sm">Concentrate low-abundance samples by TCA/acetone precipitation or ultracentrifugation. Additional purification for exosomes.</p>
						</div>
						<div class="border-b border-subtle pb-4">
							<p class="text-heading mb-1">3. Specialized Processing</p>
							<p class="text-muted text-sm">Apply optimized protocols per sample type. CSF: albumin depletion option. Media: BSA/FBS removal.</p>
						</div>
						<div class="border-b border-subtle pb-4">
							<p class="text-heading mb-1">4. LC-MS/MS Analysis</p>
							<p class="text-muted text-sm">Deep profiling with Orbitrap Astral DIA. Identify 200-2,000 proteins depending on sample type.</p>
						</div>
						<div class="border-b border-subtle pb-4">
							<p class="text-heading mb-1">5. Custom Data Analysis</p>
							<p class="text-muted text-sm">Statistical and bioinformatics analysis specialized for research questions. Literature-based interpretation included.</p>
						</div>
						<div>
							<p class="text-heading mb-1">6. Reporting & Consultation</p>
							<p class="text-muted text-sm">Detailed report and result interpretation consultation. Follow-up experiment suggestions. Results within 3-4 weeks.</p>
						</div>
					</div>
				</div>
			</div>

			<!-- Standard Deliverables -->
			<div class="mb-12">
