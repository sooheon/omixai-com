---
import '../styles/global.css';
import Layout from '../components/Layout.astro';
import Breadcrumb from '../components/Breadcrumb.astro';
import { getTranslations } from '../content/translations';
import resourcesData from '../content/resources.json';

const t = getTranslations('en');
const lang = 'en';
const r = resourcesData;

const pageTitle = 'Technical Documentation';
const pageSubtitle = 'Platform specifications, performance metrics, and deliverables';
---

<Layout lang="en" title={`${pageTitle} - ${t.meta.title}`} description="Technical documentation for OmixAI's proteomics services. Platform specs, performance metrics, and standard deliverables." currentPage="resources" lightHeader={false}>
	<!-- Hero Section -->
	<section class="bg-section-alt py-16">
		<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
			<Breadcrumb lang={lang} items={[
				{ name: t.nav.resources, url: '/resources' },
				{ name: pageTitle, url: '/technical' }
			]} />
			<div class="text-center">
				<h1 class="text-3xl md:text-4xl text-heading mb-3 animate-fade-in-up">
					{pageTitle}
				</h1>
				<p class="text-lg text-body animate-fade-in-up">
					{pageSubtitle}
				</p>
			</div>
		</div>
	</section>

	<!-- Technical Content -->
	<section class="py-12 bg-section">
		<div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
			<!-- Platform Specs -->
			<div class="mb-12">
				<h2 class="text-2xl mb-6 text-body">{r.technicalDocs.platform.title[lang]}</h2>
				<div class="border-b border-subtle pb-6">
					<h3 class="text-lg text-heading mb-4">{r.technicalDocs.platform.name}</h3>
					<ul class="space-y-2 text-body">
						{r.technicalDocs.platform.specs.map((spec) => (
							<li>
								<strong class="text-body">{typeof spec.label === 'string' ? spec.label : spec.label[lang]}:</strong>{' '}
								{typeof spec.value === 'string' ? spec.value : spec.value[lang]}
							</li>
						))}
					</ul>
				</div>
			</div>

			<!-- Performance Metrics -->
			<div class="mb-12">
				<h2 class="text-2xl mb-6 text-body">{r.technicalDocs.performance.title[lang]}</h2>
				<div class="overflow-x-auto">
					<table class="w-full">
						<thead>
							<tr class="border-b border-subtle">
								<th class="text-left py-2 text-body">{r.technicalDocs.performance.headers.sampleType[lang]}</th>
								<th class="text-left py-2 text-body">{r.technicalDocs.performance.headers.proteins[lang]}</th>
							</tr>
						</thead>
						<tbody class="text-body">
							{r.technicalDocs.performance.rows.map((row, index) => (
								<tr class={index < r.technicalDocs.performance.rows.length - 1 ? "border-b border-subtle" : ""}>
									<td class="py-2">{row.sampleType[lang]}</td>
									<td class="py-2">{row.proteins}</td>
								</tr>
							))}
						</tbody>
					</table>
				</div>
			</div>

			<!-- Standard Deliverables -->
			<div class="mb-12">
				<h2 class="text-2xl mb-6 text-body">{r.technicalDocs.deliverables.title[lang]}</h2>
				<div class="space-y-6">
					{r.technicalDocs.deliverables.sections.map((section) => (
						<div>
							<h3 class="text-lg text-heading mb-3">{section.title[lang]}</h3>
							<ul class="space-y-2 text-body">
								{section.items.map((item) => (
									<li>â€¢ {item[lang]}</li>
								))}
							</ul>
						</div>
					))}
				</div>
			</div>

			<!-- CTA -->
			<div class="text-center mt-16">
				<p class="text-xl text-body mb-6">{r.technicalDocs.cta.question[lang]}</p>
				<a href="mailto:omixai@omixai.com" class="btn-primary inline-block px-8 py-4 rounded-full text-lg">
					{r.technicalDocs.cta.button[lang]}
				</a>
			</div>
		</div>
	</section>
</Layout>
