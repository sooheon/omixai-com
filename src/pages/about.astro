---
import '../styles/global.css';
import Layout from '../components/Layout.astro';
import { getTranslations } from '../content/translations';

const t = getTranslations('en');
---

<Layout lang="en" title="About - OmixAI" description="Meet the OmixAI team: experts in proteomics, mass spectrometry, and AI-driven bioanalysis. Based in Seoul, we're advancing multi-omics research." currentPage="about" lightHeader={false}>

	<!-- Hero Section -->
	<section class="bg-section-alt py-16">
		<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
			<h1 class="text-3xl md:text-4xl text-heading animate-fade-in-up">
				{t.about.title}
			</h1>
		</div>
	</section>

	<!-- Team Section -->
	<section class="py-12 bg-section">
		<div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
			<h2 class="text-2xl text-heading text-center mb-8 animate-fade-in-up animate-delay-200">
				{t.about.subtitle}
			</h2>
			<div class="space-y-12">
				{t.about.team.map((member, i) => (
					<div class={`glass-card rounded-xl p-6 animate-fade-in-up animate-delay-${(i + 3) * 100}`}>
						<div class="grid md:grid-cols-[180px_1fr] gap-6">
							<div class="text-center md:text-left">
								<img src={member.photo} alt={member.name} class="w-32 h-36 object-cover object-top rounded-lg shadow-md border border-white/10 mx-auto md:mx-0 mb-3" />
								<h2 class="text-xl text-heading mb-1">{member.name}</h2>
								<p class="text-[var(--brand-teal)]">{member.title}</p>
							</div>
							<div class="space-y-4">
								<div>
									<h3 class="text-sm text-dim mb-1">Experience</h3>
									<ul class="space-y-1">
										{member.experience.map((item) => (
											<li class="text-body text-sm">{item}</li>
										))}
									</ul>
								</div>
								<div>
									<h3 class="text-sm text-dim mb-1">Education</h3>
									<ul class="space-y-1">
										{member.education.map((item) => (
											<li class="text-body text-sm">{item}</li>
										))}
									</ul>
								</div>
							</div>
						</div>
					</div>
				))}
			</div>
		</div>
	</section>

	<!-- Investors Section -->
	<section class="py-12 bg-section-alt">
		<div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
			<h2 class="text-2xl text-heading text-center mb-8">
				{t.about.investors.title}
			</h2>
			<div class="flex flex-wrap justify-center items-center gap-8">
				{t.about.investors.list.length === 0 ? (
					<p class="text-dim text-center">Coming soon</p>
				) : (
					t.about.investors.list.map((investor) => (
						<div class="w-40 h-24 flex items-center justify-center rounded-lg p-4 bg-white/90">
							<img src={investor.logo} alt={investor.name} class="max-w-full max-h-full object-contain" />
						</div>
					))
				)}
			</div>
		</div>
	</section>

	<!-- Timeline Section -->
	<section class="py-10 bg-section">
		<div class="max-w-3xl mx-auto px-4 sm:px-6 lg:px-8">
			<h2 class="text-2xl text-heading text-center mb-8">
				{t.about.timeline.title}
			</h2>

			<div class="space-y-6">
				<!-- 2025 -->
				<div>
					<h3 class="text-lg text-[var(--brand-teal)] mb-3">2025</h3>
					<ul class="space-y-2">
						<li class="text-body">
							<span class="text-body">Dec</span>
							<span class="mx-2 text-slate-600">·</span>
							<span>Service contract signed with OncoCross</span>
						</li>
						<li class="text-body">
							<span class="text-body">Nov</span>
							<span class="mx-2 text-slate-600">·</span>
							<span>LLM-powered analysis platform launched</span>
						</li>
						<li class="text-body">
							<span class="text-body">Oct</span>
							<span class="mx-2 text-slate-600">·</span>
							<span>Acquired Radisen AI</span>
						</li>
						<li class="text-body">
							<span class="text-body">Sep</span>
							<span class="mx-2 text-slate-600">·</span>
							<span>Cumulative proteomics service revenue surpassed ₩500M</span>
						</li>
						<li class="text-body">
							<span class="text-body">Jun</span>
							<span class="mx-2 text-slate-600">·</span>
							<span>Automated DIA proteomics sample preparation introduced</span>
						</li>
					</ul>
				</div>

				<!-- 2024 -->
				<div>
					<h3 class="text-lg text-[var(--brand-teal)] mb-3">2024</h3>
					<ul class="space-y-2">
						<li class="text-body">
							<span class="text-body">Jun</span>
							<span class="mx-2 text-slate-600">·</span>
							<span>First proteomics analysis revenue</span>
						</li>
						<li class="text-body">
							<span class="text-body">Jun</span>
							<span class="mx-2 text-slate-600">·</span>
							<span>Pantera Inc. founded</span>
						</li>
						<li class="text-body">
							<span class="text-body">Jan</span>
							<span class="mx-2 text-slate-600">·</span>
							<span>First Astral mass spectrometer imported and installed in South Korea</span>
						</li>
					</ul>
				</div>
			</div>
		</div>
	</section>
</Layout>
